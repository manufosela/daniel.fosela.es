---
import { Footer as localFooter} from '~/data/config';

const { language } = Astro.props;

const footer = localFooter[language] || {};

const { claim, also, linkAlso } = footer;
---

<footer class="credit">
  <div class="claim">{claim}</div>
  <div class="contact">&#128231; daniel.fosela@gmail.com</div>
  <a href={linkAlso} class="link-also">
    <div class="also">{also}</div>
    <img src="/images/figma.png" alt="Figma" width="20"/>
  </a>
</footer>

<style>
  footer {
    display: flex;
    margin:0;
    z-index: 10;
    padding: 0 4rem;
    padding-bottom: 1rem;
  }

  .dot {
    margin: 0 0.5rem;
  }

  .credit {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: var(--color-text-light);
    font-size: 1rem;
  }
  .credit > * {
    margin: 1rem;
  }
  .claim {
    text-align: center;
  }
  .contact {
    font-size: 1.2rem;
    font-weight: bold;
  }
  .link-also {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: var(--color-text-light);
    font-size: 1rem;
    font-weight: 100;
  }

  .librecounterLayer {
    display: flex;
    gap: 0.5rem;
  }
  .librecounter {
    height: 1.3rem;
    display: inline-block;
  }

  @media screen and (max-width: 991px) {
    footer {
      display: grid;
      grid-template-columns: auto auto auto;
      grid-template-rows: auto auto;
      align-items: center;
      gap: 0.5rem;
    }
    .credit {
      font-size: 1rem;
    }
    .librecounterLayer:nth-child(1) {
      grid-column: 1 / 2;
      grid-row: 1;
    }
    .dot:nth-child(2) {
      grid-column: 2 / 3;
      grid-row: 1;
    }
    .librecounterLayer:nth-child(5) {
      grid-column: 3 / 4;
      grid-row: 1;
    }
    .librecounterLayer:nth-child(3) {
      grid-column: 1 / 2;
      grid-row: 2;
    }
    .dot:nth-child(4) {
      grid-column: 2 / 3;
      grid-row: 2;
    }
    .librecounterLayer:nth-child(7) {
      grid-column: 3 / 4;
      grid-row: 2;
    }
  }
</style>
