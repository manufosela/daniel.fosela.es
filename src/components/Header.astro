---
import LightDarkToggle from './LightDarkToggle.astro';
import Navigation from './Navigation.astro';
import EsEnToogle from './EsEnToggle.astro';

const { active, language } = Astro.props
---
<section class="header">
  <div class="header__controls">
    <LightDarkToggle />
    <EsEnToogle />
  </div>
  <div class="header__navigation">
    <Navigation active={active} language={language} />
  </div>
</section>

<style>
  .header {
    position: fixed;
    top:0;
    display: flex;
    flex-direction: row-reverse;
    align-items: center;
    margin:0;
    padding: 1rem;
    width: 100%;
    height: 7vh;
    background-color: var(--background-light);
    transition: background-color 0.3s ease; /* Transici√≥n suave */
    z-index: 1000;
  }

  .header__controls {
    display: flex;
    flex-direction: row-reverse;
    justify-content: flex-start;
    gap: 1rem;
    width: 11%;
  }
  .header__navigation {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    gap: 1rem;
    width:89%;
  }

  @media screen and (max-width: 991px) {
    .header {
      padding:0;
      flex-direction: row-reverse;
    }
  }
</style>
